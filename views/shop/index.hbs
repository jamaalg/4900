<h1>{{title}}</h1>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset- col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
        {{successMsg}}
    </div>
  </div>
</div>
<div class="page-header" style="border: 1px gray solid;" >
  <img src="/images/scroogemoneybagwood.png" alt="not working" style="max-height:150pc; max-width: 150px;">
   <span style="color: black; font-size: 50px; font-style: Calibri;"> Company Name's {{ title }}</span>
</div>
<!-- Loop through array of products from database-->
{{# each products}}
<div class="row">
   {{# each this }}
   <div class="col-sm-6 col-md-4">
     <div class="thumbnail">
       <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
       <div class="caption">
         <h3> {{ this.title }}</h3>
         <p class="description"> {{ this.description }}</p>
         <!-- Clearfix helper class Bootstrap Removes all floating within div float independently -->
         <div class="clearfix">
           <div class="price pull-left">${{ this.price }}</div>
           <a href="/add-to-cart/{{this.id}}" class="btn btn-success pull-right" role="button">Add to <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
         </div>
       </div>
     </div>
   </div>
   {{/ each}}
</div>
{{/ each}}
