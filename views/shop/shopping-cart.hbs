<!--
shopping-cart.hbs
View rendered for user shopping cart
-->
{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                      <div class="row">
                          <div class="col-sm-8 col-sm-offset-1" style="padding: 5px;">
                            <span>  <img src="{{ this.item.imagePath }}" alt="..." class="img-responsive" style="width: 100px; height:100px; float: left; margin: 5px"></span>
                            <span><strong>{{ this.item.title }}</strong></span>
                          </div>
                          <div class="col-sm-2 col-sm-offset-1" style="height: 125px; padding: 5px;">
                            <span class="badge"> Qty: {{ this.qty }}  </span>
                            <div class="btn-group">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown"> Remove <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="/reduce/{{this.item._id}}">Remove (1) Item</a></li>
                                    <li><a href="/remove/{{this.item._id}}">Remove All</a></li>
                                </ul>
                            </div>
                            <span class="label label-success">${{ this.price }}</span>
                          </div>
                      </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: $ {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}
